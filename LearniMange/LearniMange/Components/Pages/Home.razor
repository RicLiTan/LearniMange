@page "/"
<head>
    <!--Initializes Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!--Stylesheet-->
    <style>
        body
        {
            font: "helvetica";
        }
        ul 
        {
            height: 150px; 
            width: 100%; 
            overflow: hidden; 
            overflow-y: scroll;
        }
        .col1
        {
            margin-right: 300px;
        }
        .late, .finished, .upcoming, .completed
        {   
            margin-bottom: 40px;
            height: 200px;
            border: black solid;
            border-width: 1px;
            border-radius: 5px;
            font-size: 12px;

        }
        .grid1, .grid2
        {
            padding-left: 10px;
            font-size: 20px;
        }
        .grid
        {
            display: grid;
            grid-template-columns: auto auto;
            background-color: rgb(240, 240, 240);
            border: black solid;
            border-width: 1px;
            border-radius: 2px;
        }
        .time p
        {
            padding-right: 10px;
            float: right;
        }
        .title p
        {
            padding-left: 10px;
        }
        .col2 h2 
        {
            padding: 3px;
            font-size: 20px;
            border: black solid;
            background-color: rgb(240, 240, 240);
            border-width: 1px;
            border-radius: 2px;
        }
        .upcoming h2
        {
            padding: 3px;
            font-size: 20px;
            border: black solid;
            background-color: rgb(240, 240, 240);
            color: black;
            border-width: 1px;
            border-radius: 2px;
        }

        h1
        {
            padding: 10px;
        }
    </style>
</head>
<body>
    <h1>Home Page</h1>
    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-4 col1">
                <div class="upcoming">
                    <!--Upcoming box-->
                    <h2><small>Upcoming</small></h2>
                    <ul>
                        @foreach (var x in DB.GetTasks())
                        {
                            <li>@x.ToString()</li>
                        }
                    </ul>
                </div>
                <div class="completed">
                    <!--Completed box-->
                    <div class = "grid">
                        <h2><div class = "grid1">Completed</div></h2>
                        <h2><div class="grid2">@Math.Round(DB.TasksCompletedPercentage(), 2)%</div></h2>
                    </div>
                    <ul>
                        @foreach (var x in DB.GetFinishedTasks())
                        {
                            <li>@x.ToString()</li>
                        }
                    </ul>
                </div>
                <div class = "title">
                    <p>LearniMange</p>
                </div>
            </div>
            <div class="col-sm-4 col2">
                <!--Late Box-->
                <div class="late">
                    <h2><small>Late</small></h2>
                    <ul>
                        @foreach (var x in DB.GetLateTasks())
                        {
                            <li>@x.ToString()</li>
                        }
                    </ul>
                </div>
                <!--Finished Box-->
                    <div class="finished">
                    <h2><small>Finished</small></h2>
                    <ul>
                        @foreach (var x in DB.GetFinishedEvents())
                        {
                            <li>@x.ToString()</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>

